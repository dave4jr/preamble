{
  "name": "preamble",
  "version": "1.0.0",
  "description": "Shopify starter theme",
  "main": "index.js",
  "scripts": {
    "build": "NODE_ENV=production npm run css && npm run js:production",
    "css": "cssnext ./css/main.css ./assets/main.css",
    "js": "webpack --progress --colors",
    "js:production": "webpack --progress --colors -p",
    "watch:css": "cssnext --watch --verbose ./css/main.css ./assets/main.css",
    "watch:js": "webpack --progress --colors --watch",
    "watch": "npm run watch:css & npm run watch:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sdn90/preamble.git"
  },
  "keywords": [
    "Shopify"
  ],
  "author": "Steven Nguyen",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sdn90/preamble/issues"
  },
  "homepage": "https://github.com/sdn90/preamble#readme",
  "dependencies": {
    "normalize.css": "^3.0.3"
  },
  "devDependencies": {
    "babel": "^5.6.14",
    "babel-core": "^5.6.15",
    "babel-loader": "^5.2.2",
    "cssnext": "^1.8.3",
    "node-libs-browser": "^0.5.2",
    "postcss": "^4.1.16",
    "postcss-cli": "^1.5.0",
    "postcss-url": "^4.0.1",
    "webpack": "^1.10.1"
  }
}
